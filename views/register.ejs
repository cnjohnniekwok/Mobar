<%- include("header"); -%>
<main class="form-multi-signin">
  <div class="row">
    <div class="col-md-6 text-center">
      <ul class="list-group">
        <li class="list-group-item">
          <h1 class="h3 mb-3 pt-3 fw-normal">Register</h1>
          <hr/>
          <form class="" action="/register" method="post">
            <label for="inputEmail" class="visually-hidden">Email address</label>
            <input type="email" id="inputEmail" name="username" class="form-control" placeholder="Email address" required autofocus>
            <label for="inputPassword" class="visually-hidden">Password</label>
            <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
            <p class="warn-text"><%= userAlreadyExisted %></p>
            <hr>
            <button class="w-100 btn btn-lg btn-outline-primary" type="submit">Register</button>
          </form>
        </li>
        <li class="list-group-item">
          OR <a href="/login">Sign in</a>
        </li>
      </ul>
    </div>

    <div class="col-md-6 text-center">
      <ul class="list-group">
        <li class="list-group-item">
            <h1 class="h3 mb-3 pt-3 fw-normal">Sign in with:</h1>
            <hr/>
            <!-- Google Sign in -->
            <a href="/auth/google" role="button">
              <img src="./icons/btn_google_signin_dark_normal_web@2x.png" class="img-fluid" alt="Google Sign in"/>
            </a>
          </li>
          <li class="list-group-item">
          <!-- GitHub Sign in -->
          <a class="mt-2 w-100 btn btn-lg btn-social btn-github" href="/auth/github" role="button">
            <i class="fab fa-github"></i>
            Sign In with GitHub
          </a>
          </li>
          <li class="list-group-item">
          <!-- Facebook Sign in -->
          <a href="/auth/facebook" role="button">
            <img src="./icons/btn_facebook_signin.png" class="img-fluid" alt="Facebook Sign in"/>
          </a>
        </li>
      </lu>
    </div>
  </div>
</main>
<%- include("footer"); -%>
