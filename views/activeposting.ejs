<%- include("header"); -%>
<main class="container">

  <% if(listofService.length === 0){ %>
    <div class="starter-template text-center py-5 px-3">
      <h1>There are no service provider yet ...</h1>
      <p class="lead">Be the first one to provide! Start Now, and sign up!</p>
    </div>
    <div class="form-setting">
      <form class="" action="/register" method="Get">
        <button class="w-100 btn btn-lg btn-outline-primary" type="Submit">Register NOW</button>
      </form>
    </div>
    <% } else{ %>
      <div class="row">
          <% listofService.forEach((eachService) => { %>
            <div class="col-lg-3 mb-3">
              <div class="card service-card">
                <% if(!eachService.img.contentType) { %>
                <img
                  class="service-image card-img-top img-thumbnail"
                  src="icons/profileDefault.png"
                  alt="">
                <% } else {%>
                <img class="service-image card-img-top img-thumbnail" src="data:image/<%=eachService.img.contentType%>;base64,<%=eachService.img.data.toString('base64')%>" alt="serivce image cap">
                <% } %>
                <div class="card-body">
                  <h5 class="card-title"><%=eachService.serviceTitle%></h5>
                  <% if(!eachService.pay){ %>
                    <h1 class="small">Free<small class="text-muted fw-light">/hr</small></h1>
                  <% } else {%>
                    <h1 class="small"><%=eachService.pay%><small class="text-muted fw-light">/hr</small></h1>
                  <% } %>
                  <hr class="mb-4">
                  <% if(eachService.serviceDetails.length > 100) {%>
                  <p class="card-text"><%=(eachService.serviceDetails).substring(0,100) + " ..."%></p>
                  <% } else { %>
                  <p class="card-text"><%= eachService.serviceDetails %></p>
                  <% } %>
                  <div>
                    <a href="/" class="btn btn-outline-success btn-sm">Read More</a>
                    <a href="" class="btn btn-outline-danger btn-sm"><i class="far fa-heart"></i></a>
                  </div>
                  <small class="mt-1 text-muted">Posted on: <%=eachService.createDate.getDate()%>-<%=eachService.createDate.getMonth()%>-<%=eachService.createDate.getFullYear()%></small>
                </div>
                <div class="card-footer">
                  <form class="" action="/" method="GET">
                    <input type="hidden" name="unlistServiceID" value="<%=eachService._id%>">
                    <button class="w-100 btn btn-sm btn-outline-primary" type="Submit" disabled>Pick this service</button>
                  </form>
                </div>
              </div>
            </div>
          <% }); %>
      </div>
    <% } %>
   </div>
<%- include("footer"); -%>
